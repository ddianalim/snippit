<div>
  <form action="/folders/{{folder.id}}" method="post">
    <legend>Edit Folder</legend>

    <div class="form-group">
      <label for="post-topic">Title</label>
      <input type="text" name="topic" class="form-control" id="folder-topic" value="{{folder.topic}}">
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
