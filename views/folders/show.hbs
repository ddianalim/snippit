<div class="page">
  <div class = "folder-title text-center">
    <h1>{{folder.title}}</h1>
    <a href="/folders/{{folder.id}}/edit">Edit Title</a>
  </div>

  <div class = "row justify-content-center">

      {{#each files as |file|}}
      <h6>{{folder.users}}</h6>
        <div on click = "">
          <div class="card" style="margin-top: .5em;">
            <h1 style="text-align: center; padding-top: .5em;">{{file.title}}</h1>
            <p class="card-text" style="white-space: pre">{{file.body}}</p>
        </div>
      {{/each}}

      <div style="width: 18rem;">
        <div class = "row justify-content-center">
            <a href="/folders/{{folder._id}}/files/new"><button>New Code Snippit</button></a>
        </div>
      </div>

  </div>
</div>

<a href="/folders" class="back-btn"><button>< Back</button></a>
