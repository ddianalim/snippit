<div class="page">
  <div class = "folder-title text-center">
    <h1>{{folder.title}}</h1>
    <a href="/folders/{{folder.id}}/edit">Edit Title</a>
  </div>

  <div class = "row">
    {{#each files as |file|}}
        <div class="card">
          <div class="card-body">
            <h1 class="card-title">{{file.title}}</h1>
            <div id="copy">
              <p class="card-text" style="white-space: pre">{{file.body}}</p>
            </div>
            <!-- <button class="btn" data-clipboard-text="{{file.body}}">
                Copy to clipboard
            </button> -->
            <button class="copyButton" id="copyButtonId" data-clipboard-action="copy" data-clipboard-target="#copy">Copy!</button>

          </div>
        </div>
    {{/each}}
  </div>

  <div class="row">
    <!-- <div class="col-sm-4"> -->
      <a href="/folders/{{folder._id}}/files/new">
        <button>New Code Snippit</button>
      </a>
